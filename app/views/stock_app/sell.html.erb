<h1>Sell Stock</h1> 
<%=current_user.balance%><br>
Stock Name: <%=@stock_name%><br>
Stock Price: <%=@stock_price%><br>
<%= form_with url: sell_path(@user_id, @stock_name, @stock_ticker, @stock_price, @stock_quantity, @transaction_type), method: :post do |form| %>
  <%= form.label :quantity, "Quantity" %>    
  <%= form.number_field :quantity, onkeydown: "return false", min: 1, max: @total_owned, value: 1 %>
  <%= form.hidden_field :transaction_type, value: "Sell" %>
  <%= form.submit "Sell" %>
<% end %>

<%= link_to "Back", :back %>

