<h1>Cash In</h1> 
<%=current_user.balance%><br>
<%= form_with url: transact_cash_in_stock_app_index_path, method: :post do |form| %>
  <%= form.label :cash_in_amount, "Amount" %>    
  <%= form.number_field :cash_in_amount, min: 1, value: 1 %>  
  <%=form.hidden_field :user_id, value: current_user.id %>
  <%= form.submit "Cash In" %>
<% end %>

<%= link_to "Back", stock_app_index_path %>

